<%- include('adminLayouts/head')  %>

        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
                <div>
                    <h1><%= title %></h1>
                    <form action="/updatedFaculty/<%= faculty.id %>" method="POST">
                        <label for="name" class="fs-4">Faculty Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required value="<%= faculty.name %>"><br><br>
                        <button type="submit" class="btn btn-info">Update Faculty</button>
                    </form>
                </div>
                

           
            
              <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">
                    <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                  </li>
                </ul>
              </nav>
            </div>
            <div class="row">
            </div>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">List Faculty</h4>
                            <% if (message) { %>
                                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                                    <strong><%= message.message %></strong>
                                </div>
                            <% } %>
                            <div class="table-responsive justify-content-center">
                                <% if (faculties != " ") { %>
                                    <table id="mytable"  class="table table-hover my-4">
                                        <thead>
                                            <tr class="table-dark text-center justify-content-center">
                                                <th class="text-center">Id</th>
                                                <th class="text-center">Name</th>
                                                <th class="text-center">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% faculties.forEach((row, index) => { %>
                                                <tr class="align-items-center">
                                                    <td class="text-center"><%= index %></td>
                                                    <td class="text-center"><%= row.name  %></td>
                                                    <td class="text-center">
                                                        <a href="/editFaculties/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                                        <a href="/deleteFaculties/<%= row.id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No Faculty Found In The Database!</h1>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
              <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright Â© bootstrapdash.com 2021</span>
              <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        
        <!-- main-panel ends -->
<%- include('adminLayouts/foot')  %>
