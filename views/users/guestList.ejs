<%- include('homeLayouts/header.ejs') %>
<div class="container">
    <div class="row mt-5">
        <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
          <% } %>
        <h2><%= title %></h2>
    </div>
    <div class="row my-5">
        <div class="col">
            <a href="/addGuestSite">
                <button type="button" class="btn btn-outline-info">Add New Guest Account</button>
            </a>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <% if(guest) { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Faculty</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>city</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(guest) { %>
                    <% guest.forEach((row, index) => { %>
                <tr>
                    <td><%= index %></td>
                    <td class="text-center"><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                    <td><%= row.username %></td>
                    <td><%= row.email %></td>
                    <td><%= row.faculty.name %></td>
                    <td><%= row.gender  %></td>
                    <td class="text-center"><%= row.phoneNumber %></td>
                    <td><%= row.city %></td>
                    <td class="text-center"><%= row.role  %></td>
                    <td>
                        <a href="/editGuest/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                        <a href="/deleteGuest/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                    </td>
                </tr>
                <% }); %>
                <% } %>
            </tbody>
        </table>
        <% } else { %>
        <h2>No Guest Found</h2>
        <% } %>
    </div>
</div>

<%- include('homeLayouts/footer.ejs') %>