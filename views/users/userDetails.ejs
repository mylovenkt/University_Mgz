<%- include('homeLayouts/header.ejs') %>    
    
<section style="background-color: #eee;">
    <div class="container py-5">
      <div class="row">
        <div class="col">
        </div>
      </div>
<% if(user) { %>
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="<%= user.image %>" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%= user.username %></h5>
              <p class="text-muted mb-1"><%= user.role %></p>
              <% if(user.role !== 'manager' && user.role !== 'guest') { %>
              <p class="text-muted mb-4"><%= user.faculty.name %></p>
              <% } %>
              <div class="d-flex justify-content-center mb-2">
                <a href="/userEditProfile">
                    <button type="button" class="btn btn-primary">Edit</button>
                </a>
              </div>
            </div>
          </div>
          
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.username %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.email %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.phoneNumber %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">City</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.city %></p>
                </div>
              </div>
              <hr>
              <% if(user.role !== 'manager' && user.role !== 'guest') { %>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Faculty</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.faculty.name %></p>
                </div>
              </div>
              <% } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
            </div>
          </div>
        </div>
      </div>
    </div>
<% } %>
  </section>

<%- include('homeLayouts/footer.ejs') %>
